{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "efsrt-ii",
  "version": "0.1.0",
  "identifier": "com.github.gabmldev.efsrt-ii",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:4321",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "efsrt-ii",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "default-src":  "'self'",
        "connect-src":  "'self' http://<ip>:9000 http://localhost:3000",
        "img-src":      "'self' http://<ip>:9000 blob: data:",
        "media-src":    "'self' http://<ip>:9000 blob: data:",
        "object-src":   "'none'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
